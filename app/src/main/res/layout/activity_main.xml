<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:text="CHITKARA UNIVERSITY"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:textSize="20sp"
        android:textColor="@android:color/background_dark"
        />
    <ImageView
       android:src="@drawable/image"
        android:id="@+id/image"
        android:layout_height="150dp"
        android:layout_width="wrap_content"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/name"
        />

    <ImageView
        android:src="@drawable/phone"
        android:id="@+id/phone"
        android:layout_height="70dp"
        android:layout_width="64dp"
        android:scaleType="centerCrop"
        android:layout_below="@+id/image"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        />
    <TextView
        android:text="+91 1762 507084-86, Mandeep Berwal â€“ 9501105718"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/phone"
        android:layout_below="@id/image"
        android:paddingTop="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="15dp"
        android:textSize="15sp"
        android:id="@+id/phn"
        android:textColor="@android:color/background_dark"
        />

    <ImageView
        android:src="@drawable/address"
        android:id="@+id/add"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:layout_below="@id/phone"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        />
    <TextView
        android:text="Chandigarh-Patiala National Highway (NH-64)
Punjab-140 401, India"
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="15dp"
        android:textSize="15sp"
        android:layout_toRightOf="@id/add"
        android:layout_below="@id/phn"
        android:textColor="@android:color/background_dark"
        />

    <ImageView
        android:src="@drawable/email"
        android:id="@+id/email"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/add"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        />
    <TextView
        android:text="admissions@chitkara.edu.in"
        android:id="@+id/emailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingTop="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="15dp"
        android:layout_toRightOf="@id/email"
        android:layout_below="@id/address"
        android:textColor="@android:color/background_dark"
        />

    <ImageView
        android:src="@drawable/website"
        android:id="@+id/web"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/email"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        />
    <TextView
        android:text="www.chitkara.edu.in/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingTop="30dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="15dp"
        android:layout_toRightOf="@id/web"
        android:layout_below="@id/emailid"
        android:textColor="@android:color/background_dark"
        />

</RelativeLayout>
